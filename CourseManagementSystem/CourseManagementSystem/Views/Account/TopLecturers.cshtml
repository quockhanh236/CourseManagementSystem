@model List<CourseManagementSystem.Models.ApplicationUser>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .content {
    }
</style>
<div style="position:absolute;width:70%;left:0;right:0;margin: 20px auto">
    @if (Model != null)
    {
        if (Model.Count > 0)
        {
            <div style="margin-top:60px;" class="panel panel-primary content">
                <div style="text-align:center" class="panel-heading">Топ преподавателей</div>
                <table class="table">
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                    </tr>

                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                       
                            <td><a href="/Account/Usr?profile=@user.UserName">Перейти к профилю</a></td>
                        </tr>
                    }

                </table>
            </div>
        }
        else
        {
            <h1 style="text-align:center;">Не найдено</h1>
        }
    }
</div>

