
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style=" padding-bottom: 70px;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Course Management System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("All courses", "List", "Course")</li>
                </ul>
                @if (User.IsInRole("teacher"))
                {
                    <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("My courses", "Teacher", "Course")</li>
                    </ul>
                }
                @if (User.IsInRole("admin"))
                {
                     <ul class="nav navbar-nav">

                     <li>@Html.ActionLink("Applications", "Requests", "Course")</li>
                     </ul>
                }
                @if (User.IsInRole("student"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("My marks", "Student", "Mark")</li>
                    </ul>
                }
                @if (User.IsInRole("student"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("My courses", "Index", "Subscribe")</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
                @Html.Partial("_SearchPartial", new CourseManagementSystem.Models.Search())
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation" style="background-color:#222222; border-bottom:none;">
            <footer class="container-fluid" style="text-align:center;color:#ffffff;">
                <p>&copy; @DateTime.Today.Year –  ASP.NET</p>
            </footer>
        </nav>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
