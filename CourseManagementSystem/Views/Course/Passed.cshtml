@using CourseManagementSystem.Models
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Passed";
}

<div class="col-md-4 " style="border-right:1px solid #eeeeee">
    @if (Model.Count() > 0)
    {
        <h2>List of students who completed this course</h2>
        <table class="table">
            <tr>
                <th>
                    Student
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)&nbsp;
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Go to profile", "Usr", "Account", new { profile = item.UserName }, null)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <hr />
        <p style="color:#808080; text-align:center">
            No students have completed this course.
        </p>
    }
</div>