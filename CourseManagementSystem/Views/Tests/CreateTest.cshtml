@model CourseManagementSystem.Models.Test


@{
    ViewBag.Title = "CreateTest";
    List<SelectListItem> lecturesNames = ViewBag.Lectures;
    string w = ViewBag.Warning;
}

<h2>CreateTest</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Test</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.LastLectureId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("lectureName", lecturesNames)

                @Html.ValidationMessageFor(model => model.LastLectureId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CreateTest" class="btn btn-default" />
            </div>
        </div>
    </div>
}